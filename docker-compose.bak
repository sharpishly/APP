services:
  sharpishly:
    image: nginx:latest
    container_name: sharpishly_prod
    volumes:
      - ./sharpishly.com/website/public:/var/www/html/sharpishly
      - ./nginx/sharpishly.conf:/etc/nginx/conf.d/sharpishly.conf
      - ./letsencrypt:/etc/letsencrypt
    ports:
      - "80:80"
      - "443:443"
    environment:
      - NGINX_HOST=sharpishly.com
    networks:
      - sharpishly-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost"]
      interval: 30s
      timeout: 10s
      retries: 3
    depends_on:
      - php_fpm
    command: >
      /bin/sh -c "
      chmod -R 755 /var/www/html/sharpishly &&
      chown -R www-data:www-data /var/www/html/sharpishly &&
      nginx -g 'daemon off;'"

  dev_sharpishly:
    image: nginx:latest
    container_name: sharpishly_dev
    volumes:
      - ./dev.sharpishly.com/website/public:/var/www/html/dev.sharpishly
      - ./nginx/dev_sharpishly.conf:/etc/nginx/conf.d/dev_sharpishly.conf
      - ./letsencrypt:/etc/letsencrypt
    ports:
      - "8080:80"
      - "8443:443"
    environment:
      - NGINX_HOST=dev.sharpishly.com
    networks:
      - sharpishly-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost"]
      interval: 30s
      timeout: 10s
      retries: 3
    depends_on:
      - php_fpm
    command: >
      /bin/sh -c "
      chmod -R 755 /var/www/html/dev.sharpishly &&
      chown -R www-data:www-data /var/www/html/dev.sharpishly &&
      nginx -g 'daemon off;'"

  php_fpm:
    build:
      context: .
      dockerfile: Dockerfile.php
    container_name: php_fpm
    volumes:
      - ./sharpishly.com/website/public:/var/www/html/sharpishly
      - ./dev.sharpishly.com/website/public:/var/www/html/dev.sharpishly
    networks:
      - sharpishly-network
    healthcheck:
      test: ["CMD", "php-fpm-healthcheck"]
      interval: 30s
      timeout: 10s
      retries: 3

  certbot:
    image: certbot/certbot:latest
    container_name: certbot
    volumes:
      - ./letsencrypt:/etc/letsencrypt
      - ./sharpishly.com/website/public:/var/www/html/sharpishly
      - ./dev.sharpishly.com/website/public:/var/www/html/dev.sharpishly
    entrypoint: >
      /bin/sh -c "
      certbot certonly --webroot --webroot-path=/var/www/html/sharpishly -d sharpishly.com --staging --non-interactive --agree-tos --email admin@sharpishly.com --force-renewal || true &&
      certbot certonly --webroot --webroot-path=/var/www/html/dev.sharpishly -d dev.sharpishly.com --staging --non-interactive --agree-tos --email admin@sharpishly.com --force-renewal || true &&
      tail -f /dev/null"
    networks:
      - sharpishly-network

  python_app:
    build:
      context: ./python_project
      dockerfile: Dockerfile
    container_name: python_app
    volumes:
      - ./python_project:/app
    networks:
      - sharpishly-network
    expose:
      - "8000"

  python_nginx:
    image: nginx:latest
    container_name: python_nginx
    volumes:
      - ./python_project/nginx.conf:/etc/nginx/conf.d/default.conf
      - ./python_project:/app
    ports:
      - "1000:80"
    networks:
      - sharpishly-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost"]
      interval: 30s
      timeout: 10s
      retries: 3
    depends_on:
      - python_app

  node_app:
    build:
      context: ./node_project
      dockerfile: Dockerfile
    container_name: node_app
    volumes:
      - ./node_project:/app
    networks:
      - sharpishly-network
    expose:
      - "3000"

  node_nginx:
    image: nginx:latest
    container_name: node_nginx
    volumes:
      - ./node_project/nginx.conf:/etc/nginx/conf.d/default.conf
      - ./node_project:/app
    ports:
      - "2000:80"
    networks:
      - sharpishly-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost"]
      interval: 30s
      timeout: 10s
      retries: 3
    depends_on:
      - node_app

networks:
  sharpishly-network:
    driver: bridge